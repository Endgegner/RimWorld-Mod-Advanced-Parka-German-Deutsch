<Defs>


	<!-- Civil Parka -->
    <ThingDef ParentName="KikohiParkaBase">
		<defName>Apparel_1ParkaCiv</defName>
		<label>Civil Parka</label>
		<description>A fancy winter parka for staying warm in even the coldest of temperatures.</description>
		<graphicData>
			<texPath>Things/Apparel/FirstCivilParka/Parka</texPath>
			<graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>9000</WorkToMake>
			<Mass>3.8</Mass>
			<StuffEffectMultiplierArmor>0.4</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>2.00</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.00</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>+0.25</SocialImpact>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
                <li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/FirstCivilParka/Parka</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Outlander</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>0.5</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
		<recipeMaker>
			<researchPrerequisite>AdvancedParka</researchPrerequisite>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
		</recipeMaker>
	</ThingDef>

